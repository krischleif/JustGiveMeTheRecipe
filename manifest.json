{
    "name": "Just Give Me The Recipe",
    "version": "0.1",
    "description": "Trims the fat and removes all the silly food blog text, gives you the recipe you actually came for.",
    "manifest_version": 2,  
    "permissions": [
        "storage",
        "contextMenus"
      ],
    "browser_action": {
        "default_popup": "options.html",
        "title": "Just Give Me The Recipe",
        "default_icon": "img/recipe-book.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": ["css/popup.css"],
        "js": ["js/jquery-3.3.1.min.js", "js/popup.js"]
    }]
  }